<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_light"
    tools:context=".AddReminderActivity">

    <!-- Top Bar -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp"
        android:gravity="center_vertical"
        android:background="@color/white"
        android:elevation="4dp">

        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_close"
            android:background="@drawable/circle_background"
            android:tint="@color/text_primary"
            android:padding="8dp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hatırlatıcı Ekle"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:gravity="center"
            android:layout_marginStart="16dp" />

        <View
            android:layout_width="40dp"
            android:layout_height="40dp" />

    </LinearLayout>

    <!-- Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <!-- App Icon -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/ic_pill_app"
                android:layout_gravity="center"
                android:layout_marginBottom="32dp" />

            <!-- Medication Name -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutMedName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:boxBackgroundMode="none"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtMedName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="İlaç Adı"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Dosage -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/layoutDose"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:boxBackgroundMode="none"
                    app:hintTextColor="@color/text_secondary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/edtDose"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Doz (örn: 1 Tablet)"
                        android:textSize="16sp"
                        android:textColor="@color/text_primary" />

                </com.google.android.material.textfield.TextInputLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Date Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_calendar"
                        android:tint="@color/primary_red"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarih"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSelectedDate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tarih Seç"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectDate"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Seç"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:backgroundTint="@color/primary_red"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Time Selection -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_time"
                        android:tint="@color/primary_red"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saat"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tvSelectedTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Saat Seç"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginTop="4dp" />

                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnSelectTime"
                        android:layout_width="wrap_content"
                        android:layout_height="40dp"
                        android:text="Seç"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        app:backgroundTint="@color/primary_red"
                        app:cornerRadius="20dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recurring Options -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_time"
                            android:tint="@color/primary_red"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Yemek Zamanı"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgMealTiming"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbBeforeMeal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yemekten Önce"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:checked="true"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbAfterMeal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yemekten Sonra"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbWithMeal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Yemek ile Birlikte"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recurring Options -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardCornerRadius="16dp"
                app:cardBackgroundColor="@color/card_background"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_calendar"
                            android:tint="@color/primary_red"
                            android:layout_marginEnd="16dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tekrar Sıklığı"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                    </LinearLayout>

                    <RadioGroup
                        android:id="@+id/rgRecurring"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <RadioButton
                            android:id="@+id/rbOnce"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sadece bu tarihte"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:checked="true"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbDaily"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Her gün bu saatte"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbWeekly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Her hafta bu günde"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary"
                            android:layout_marginBottom="8dp" />

                        <RadioButton
                            android:id="@+id/rbMonthly"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Her ay bu tarihte"
                            android:textSize="16sp"
                            android:textColor="@color/text_primary" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </ScrollView>

    <!-- Bottom Save Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@color/white"
        android:elevation="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSave"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Hatırlatıcıyı Kaydet"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:textStyle="bold"
            app:backgroundTint="@color/primary_red"
            app:cornerRadius="28dp" />

    </LinearLayout>

</LinearLayout> 